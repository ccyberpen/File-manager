<Window x:Class="FileManager.RenameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Переименовать" Height="150" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical">
            <TextBlock Text="Введите новое имя:" Margin="0,0,0,5"/>
            <TextBox Name="NewNameTextBox" Width="380"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="ОК" Width="75" IsDefault="True" Click="OkButton_Click"/>
            <Button Content="Отмена" Width="75" IsCancel="True" Margin="10 0 0 0"/>
        </StackPanel>
    </Grid>
</Window>