<Window x:Class="FileManager.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Копирование файлов" Height="150" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock Name="LoadingTextBlock" Text="Копирование файлов..." FontSize="16" Margin="0,0,0,10"/>
        <ProgressBar Name="LoadingProgressBar" Height="20" IsIndeterminate="True"/>
    </StackPanel>
</Window>